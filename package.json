{
  "name": "lizmeter",
  "version": "1.0.0",
  "private": true,
  "main": "dist/main/index.js",
  "type": "module",
  "scripts": {
    "postinstall": "echo 'Run bun run rebuild after installing native deps'",
    "dev": "bun run build:main && bun run build:preload && concurrently -k -n \"vite,electron\" -c \"cyan,yellow\" \"vite\" \"sleep 3 && ELECTRON_DEV=1 electron .\"",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "build:main": "bun build src/main/index.ts --outdir dist/main --target=node --external electron --external better-sqlite3",
    "build:preload": "bun build src/preload/index.ts --outfile dist/preload/index.cjs --target=node --external electron --format=cjs",
    "build:renderer": "vite build",
    "build": "bun run build:main && bun run build:preload && bun run build:renderer",
    "lint": "eslint src/",
    "fmt": "dprint fmt",
    "fmt:check": "dprint check",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "latest",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/sql.js": "^1.4.9",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^9.2.1",
    "dprint": "^0.51.1",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "electron-playwright-helpers": "^2.1.0",
    "eslint": "^10.0.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "playwright": "^1.58.2",
    "sql.js": "^1.14.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  }
}
